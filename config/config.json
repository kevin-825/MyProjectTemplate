        "-mcpu=cortex-m4",
        "-mthumb",
        "-Wall",
        "-Wextra",
        "-MMD",
        "-MP",
        "-ffunction-sections",
        "-fdata-sections"
      ],
      "ldflags": [
        "-Wl,--gc-sections",
        "-Wl,--print-memory-usage"
      ],
      "env": {
        "ENV_VAR0": ""
      }
    },

    "riscv64": {
      "toolchain": "riscv64-unknown-elf-",
      "cflags": [
        "-march=rv64imafdc",
        "-mabi=lp64d",
        "-Wall",
        "-Wextra",
        "-MMD",
        "-MP",
        "-ffunction-sections",
        "-fdata-sections"
      ],
      "ldflags": [
        "-Wl,--gc-sections",
        "-Wl,--print-memory-usage"
      ],
      "env": {
        "ENV_VAR0": ""
      }
    },

    "riscv32": {
    "toolchain": "/mnt/wsl/vhd0/opt/riscv/riscv_u24_selfbuildt_gnu/newlib/bin/riscv64-unknown-elf-",
    "cflags": [
      "-march=rv32imafc",
      "-mabi=ilp32f",
      "-Wall",
      "-Wextra",
      "-std=c11",
      "-ffreestanding",
      "-ffunction-sections",
      "-fdata-sections",
      "-fno-exceptions",
      "-fno-rtti",
      "--specs=nosys.specs",
      "-MMD",
      "-MP"
    ],
    "ldflags": [
      "-march=rv32imafc",
      "-mabi=ilp32f",
      "-nostartfiles",
      "--specs=nosys.specs",
      "-Wl,--gc-sections",
      "-Wl,--start-group",
      "-lc",
      "-lgcc",
      "-Wl,--end-group"
    ],
    "linker_script": "./config/linker_riscv32.ld",
    "env": {
      "ENV_VAR0": ""
    }
  },


    "local": {
