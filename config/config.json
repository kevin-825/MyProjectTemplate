  "architectures": {
    "arm64": {
      "toolchain": "aarch64-none-elf-",
      "cflags": [
        "-mcpu=cortex-a72",
        "-march=armv8-a",
        "-Wall",
        "-Wextra",
        "-MMD",
        "-MP",
        "-ffunction-sections",
        "-fdata-sections"
      ],
      "ldflags": [
        "-Wl,--gc-sections",
        "-Wl,--print-memory-usage"
      ],
      "env": {
        "ENV_VAR0": ""
      }
    },

    "arm32": {
      "toolchain": "arm-none-eabi-",
