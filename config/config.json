  "build_profile": "debug",
  "version": {
    "major": 1,
    "minor": 0,
    "build_number": 0,
    "increment_build_number": false
  },
  "profiles": {
    "debug": {
      "optimization": "O0",
      "debug": true,
      "lto": false,
      "save_temps": true,
      "verbose": true,
      "parallel_jobs": "auto",
      "sanitize": "none",
